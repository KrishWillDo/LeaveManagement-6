@model AdminLeaveRequestViewVM

@{
    ViewData["Title"] = "Admin Leave requests";
}


<div class="row">
    <div class="col-sm-6 col-md-3 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.TotalRequests </h5>
                <p class="card-text">@Html.DisplayNameFor(model => model.TotalRequests)</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.ApprovedRequests</h5>
                <p class="card-text">@Html.DisplayNameFor(model => model.ApprovedRequests)</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.PendingRequests</h5>
                <p class="card-text">@Html.DisplayNameFor(model => model.PendingRequests)</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.RejectedRequests</h5>
                <p class="card-text">@Html.DisplayNameFor(model => model.RejectedRequests)</p>
            </div>
        </div>
    </div>
</div>

<hr />

<h3>Leave requests</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Leave Type
            </th>
            <th>
                Date Requested
            </th>
            <th>
                Approved
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
            <tr>
                <td>
                    @item.Employee?.FirstName @item.Employee?.LastName
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    @item.LeaveType?.Name
                </td>
                <td>
                    @item.DateRequested
                </td>
                <td>
                    @if (item.Cancelled)
                    {
                        <span class="badge bg-secondary">Cancelled</span>
                    }
                    else if (item.Approved == true)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else if (item.Approved == false)
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!item.Cancelled)
                    {
                        <a asp-action="Details" class="btn btn-success btn-sm" asp-route-id="@item.Id">Review</a>
                        //<input type="button" asp-action="Details" asp-controller="LeaveRequests" value="Review" asp-route-id="@item.Id" class="btn btn-success btn-sm" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
