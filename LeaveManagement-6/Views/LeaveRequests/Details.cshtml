@model LeaveRequestVM

@{
    ViewData["Title"] = "Details";

    string className;
    string headerText;

    if (Model.Approved == null)
    {
        headerText = "Pending Approval";
        className = "warning";
    }
    else if (Model.Approved == true)
    {
        headerText = "Approved";
        className = "success";
    }
    else
    {
        headerText = "Rejected";
        className = "danger";
    }

}

<h1>Details</h1>


<div class="row">
    <div class="alert alert-@className" role="alert">
        <h4 class="alert-heading">@headerText</h4>
        <p>
            <strong>Employee Name: </strong> @Model.Employee.FirstName @Model.Employee.LastName
        </p>
        <p>
            <strong>Date Requested: </strong> @Model.DateRequested
        </p>
    </div>
</div>


<div>
    <h4>LeaveRequest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRequested)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRequested)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dd class="col-sm-2">
            No of Days
        </dd>
        <dt class="col-sm-10">
            @Convert.ToInt32((Model.EndDate - Model.StartDate).TotalDays)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestComments)
        </dd>
    </dl>
</div>
<div class="row">

    @if (Model.Approved == null)
    {
        <div class="col">
            <form asp-action="ApproveRequest">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="approved" value="true" />
                <button type="submit" class="btn btn-success">Approve</button>
            </form>
        </div>
        <div class="col">
            <form asp-action="ApproveRequest">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="approved" value="false" />
                <button type="submit" class="btn btn-danger">Reject</button>
            </form>
        </div>
    }
    <div class="col">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
